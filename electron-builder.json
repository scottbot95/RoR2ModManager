{
  "productName": "RoR2 Mod Manager",
  "appId": "com.electron.ror2modmanager",
  "directories": {
    "output": "release/",
    "buildResources": "build"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "dist",
    "target": ["nsis", "portable"]
  },
  "mac": {
    "icon": "dist",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist",
    "target": ["AppImage"],
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "include": "build/installer.nsh"
  }
}

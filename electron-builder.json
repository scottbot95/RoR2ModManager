{
  "productName": "RoR2ModManager",
  "appId": "com.electron.ror2modmanager",
  "directories": {
    "output": "release/",
    "buildResources": "build"
  },
  "protocols": [
    {
      "name": "Risk of Rain 2 Mod Manager Protocol",
      "schemes": ["ror2mm"]
    }
  ],
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "dist",
    "target": ["nsis"]
  },
  "mac": {
    "icon": "dist",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist",
    "target": ["AppImage"],
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "include": "build/installer.nsh",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  }
}
